<div class="span12">
<% if flash[:message] %>
  <div class="alert alert-success">
    <a class="close" data-dismiss="alert" href="#">×</a>
    <h4 class="alert-heading">Well done!</h4>
      <%= flash[:message] %>
  </div>
<% end %>
<% if flash[:error] %>
  <div class="alert alert-error">
    <a class="close" data-dismiss="alert" href="#">×</a>
    <h4 class="alert-heading">Whoops!</h4>
      <%= flash[:error] %>
  </div>
<% end %>

